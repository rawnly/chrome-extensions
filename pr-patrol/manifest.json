{
  "manifest_version": 3,
  "name": "PR Patrol â€” GitHub Review Tabs",
  "version": "1.0.0",
  "description": "Automatically groups GitHub PRs awaiting your review into a dedicated tab group. Never miss a review request.",
  "permissions": ["tabs", "tabGroups", "storage", "alarms"],
  "host_permissions": ["https://api.github.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
